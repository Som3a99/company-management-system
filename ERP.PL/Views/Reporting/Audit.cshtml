@model ReportingIndexViewModel
@{
    ViewData["Title"] = "Audit Reports";
}
<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Audit Activity Reports (CEO)</h2>
        <a class="btn btn-outline-dark" asp-action="Index">Back to Operational Reports</a>
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-md-3"><label class="form-label">Start Date (UTC)</label><input asp-for="Filters.StartDateUtc" type="date" class="form-control" /></div>
        <div class="col-md-3"><label class="form-label">End Date (UTC)</label><input asp-for="Filters.EndDateUtc" type="date" class="form-control" /></div>
        <div class="col-md-3"><label class="form-label">Export</label><select asp-for="Filters.Export" class="form-select" asp-items="Html.GetEnumSelectList<ERP.PL.ViewModels.Reporting.ReportExportFormat>()"></select></div>
        <div class="col-md-3 d-flex align-items-end"><a class="btn btn-outline-secondary w-100" asp-action="ExportAudit" asp-route-StartDateUtc="@Model.Filters.StartDateUtc?.ToString("yyyy-MM-dd")" asp-route-EndDateUtc="@Model.Filters.EndDateUtc?.ToString("yyyy-MM-dd")" asp-route-Export="@Model.Filters.Export">Export</a></div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
            <thead class="table-light"><tr><th>Time (UTC)</th><th>User</th><th>Action</th><th>Resource</th><th>Succeeded</th><th>Error</th></tr></thead>
            <tbody>
                @foreach (var row in Model.AuditRows)
                {
                    <tr><td>@row.TimestampUtc.ToString("u")</td><td>@row.UserEmail</td><td>@row.Action</td><td>@row.ResourceType:@row.ResourceId</td><td>@row.Succeeded</td><td>@row.ErrorMessage</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>