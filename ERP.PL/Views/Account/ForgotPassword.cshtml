@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page-wrapper">
    <div class="container">
    <div class="row justify-content-center account-readable">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4 animate-in">
                <div class="auth-logo mx-auto mb-3">
                    <i class="fas fa-key" style="font-size: 1.25rem;"></i>
                </div>
                <h2 class="auth-heading">Reset your password</h2>
                <p class="auth-subheading">Submit a request and IT Admin will help you get back in</p>
            </div>
            <div class="card auth-card animate-in" style="animation-delay: 0.08s">
                <div class="card-body p-4">
                    <div class="alert alert-soft mb-4" style="font-size: 0.875rem;">
                        <div class="d-flex gap-2">
                            <i class="fas fa-info-circle mt-1" style="color: var(--info-emphasis);"></i>
                            <div>
                                <strong>Password Reset Process:</strong>
                                <ol class="mb-0 mt-2 ps-3">
                                    <li>Submit your company email address</li>
                                    <li>A ticket will be created for IT Admin review</li>
                                    <li>Try logging in after 30 minutes</li>
                                    <li>If still locked, visit the IT desk with your employee ID</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" style="font-size: 0.875rem;"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email"
                                       class="form-control"
                                       placeholder="your.email@company.com"
                                       autocomplete="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger" style="font-size: 0.8125rem;"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-primary-lg">
                                <i class="fas fa-paper-plane"></i> Submit Request
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center mt-3 animate-in" style="font-size: 0.8125rem; color: var(--text-muted); animation-delay: 0.16s">
                <i class="fas fa-lock me-1"></i> Your request will be reviewed by IT Admin for security verification
            </p>
        </div>
    </div>
</div>
</div>
@section Styles {
    <style>
        .auth-page-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 200px);
            padding: 2rem 0;
        }
        .auth-logo {
            width: 52px;
            height: 52px;
            background: linear-gradient(135deg, var(--accent-main), var(--accent-light));
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            box-shadow: 0 4px 16px rgba(var(--accent-main-rgb), 0.3);
        }
        .auth-heading {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-heading);
            margin-bottom: 0.25rem;
        }
        .auth-subheading {
            font-size: 0.9375rem;
            color: var(--text-muted);
            margin: 0;
        }
        .auth-card .form-control {
            background: var(--bg-secondary);
        }
        .auth-card .form-control:focus {
            background: var(--bg-main);
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}