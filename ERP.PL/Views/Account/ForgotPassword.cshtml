@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center mt-5 account-readable">
        <div class="col-md-6">
            <div class="card auth-card">
                <div class="card-header header-gradient">
                    <h4 class="mb-0">
                        <i class="fas fa-key"></i> Forgot Password
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info alert-soft">
                        <i class="fas fa-info-circle"></i>
                        <strong>Password Reset Process:</strong>
                        <ol class="mb-0 mt-2">
                            <li>Submit your company email address</li>
                            <li>A ticket will be created for IT Admin review</li>
                            <li>Try logging in after 30 minutes</li>
                            <li>If still locked, visit the IT desk with your employee ID</li>
                        </ol>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email"
                                       class="form-control"
                                       placeholder="your.email@company.com"
                                       autocomplete="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Submit Request
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">
                    <i class="fas fa-lock"></i> Your request will be reviewed by IT Admin for security verification
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}