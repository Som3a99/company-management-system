@model ForgotPasswordConfirmationViewModel

@{
    ViewData["Title"] = "Password Reset Request Submitted";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card auth-card border-success">
                <div class="card-header header-gradient success">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle"></i> Request Submitted
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success alert-soft">
                        <i class="fas fa-info-circle"></i>
                        @Model.Message
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TicketNumber))
                    {
                        <div class="card card-soft mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-ticket-alt"></i> Your Ticket Number:
                                </h5>
                                <h2 class="text-primary mb-0">@Model.TicketNumber</h2>
                                <small class="text-muted">
                                    Save this number for reference when contacting IT
                                </small>
                            </div>
                        </div>
                    }

                    <h5 class="mt-4">
                        <i class="fas fa-clock"></i> What Happens Next?
                    </h5>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6>IT Admin Review (Within 30 minutes)</h6>
                                <p class="text-muted mb-0">
                                    An IT administrator will review your request and approve a temporary password
                                </p>
                            </div>
                        </div>

                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6>Try Logging In</h6>
                                <p class="text-muted mb-0">
                                    After 30 minutes, attempt to login again. Your temporary password will be active.
                                </p>
                            </div>
                        </div>

                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6>If Still Locked</h6>
                                <p class="text-muted mb-0">
                                    Visit the IT desk with your employee ID and the ticket number above
                                </p>
                            </div>
                        </div>

                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6>Change Your Password</h6>
                                <p class="text-muted mb-0">
                                    You'll be required to change the temporary password immediately upon login
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning alert-soft mt-4">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Security Notice:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Your request expires in 1 hour if not processed</li>
                            <li>Only IT Admin can approve password resets</li>
                            <li>You may be asked to verify your identity in person</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 10px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 30px;
        }

        .timeline-marker {
            position: absolute;
            left: -20px;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 2px solid #fff;
        }

        .timeline-content {
            padding-left: 15px;
        }

        .timeline-content h6 {
            margin-bottom: 5px;
            font-weight: 600;
        }
    </style>
}