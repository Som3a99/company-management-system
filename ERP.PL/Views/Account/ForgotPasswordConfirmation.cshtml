@model ForgotPasswordConfirmationViewModel

@{
    ViewData["Title"] = "Password Reset Request Submitted";
}

<div class="container">
    <div class="auth-page-wrapper">
        <div class="row justify-content-center account-readable w-100">
            <div class="col-md-8 col-lg-6">
                <div class="text-center mb-4 animate-in">
                    <div class="auth-logo success-logo mx-auto mb-3">
                        <i class="fas fa-check-circle" style="font-size: 1.25rem; color: white;"></i>
                    </div>
                    <h2 class="auth-heading">Request Submitted</h2>
                    <p class="auth-subheading">Your password reset request has been received</p>
                </div>

                <div class="card auth-card animate-in" style="animation-delay: 0.08s">
                    <div class="card-body p-4">
                        <div class="alert alert-soft mb-4" style="font-size: 0.875rem; border-left: 3px solid var(--success);">
                            <div class="d-flex gap-2">
                                <i class="fas fa-info-circle mt-1" style="color: var(--success);"></i>
                                <div>@Model.Message</div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.TicketNumber))
                        {
                            <div class="ticket-card mb-4">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    <i class="fas fa-ticket-alt" style="color: var(--accent);"></i>
                                    <span class="fw-semibold" style="font-size: 0.875rem; color: var(--text-muted);">Your Ticket Number</span>
                                </div>
                                <h2 class="mb-0" style="color: var(--accent); font-weight: 700; letter-spacing: 0.05em;">@Model.TicketNumber</h2>
                                <small style="color: var(--text-subtle); font-size: 0.8125rem;">
                                    Save this number for reference when contacting IT
                                </small>
                            </div>
                        }

                        <h6 class="fw-semibold mb-3" style="color: var(--text-heading); font-size: 0.9375rem;">
                            <i class="fas fa-clock me-1" style="color: var(--accent);"></i> What Happens Next?
                        </h6>

                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker" style="background: var(--accent);"></div>
                                <div class="timeline-content">
                                    <h6>IT Admin Review <span class="text-muted fw-normal">(Within 30 min)</span></h6>
                                    <p>An IT administrator will review your request and approve a temporary password</p>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker" style="background: var(--info, #38bdf8);"></div>
                                <div class="timeline-content">
                                    <h6>Try Logging In</h6>
                                    <p>After 30 minutes, attempt to login again. Your temporary password will be active.</p>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker" style="background: var(--warning);"></div>
                                <div class="timeline-content">
                                    <h6>If Still Locked</h6>
                                    <p>Visit the IT desk with your employee ID and the ticket number above</p>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker" style="background: var(--success);"></div>
                                <div class="timeline-content">
                                    <h6>Change Your Password</h6>
                                    <p>You'll be required to change the temporary password immediately upon login</p>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-soft mt-4" style="font-size: 0.8125rem; border-left: 3px solid var(--warning);">
                            <div class="d-flex gap-2">
                                <i class="fas fa-exclamation-triangle mt-1" style="color: var(--warning-emphasis);"></i>
                                <div>
                                    <strong>Security Notice:</strong>
                                    <ul class="mb-0 mt-1 ps-3">
                                        <li>Your request expires in 1 hour if not processed</li>
                                        <li>Only IT Admin can approve password resets</li>
                                        <li>You may be asked to verify your identity in person</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <a asp-action="Login" class="btn btn-primary btn-primary-lg">
                                <i class="fas fa-sign-in-alt me-1"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .auth-page-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 220px);
            padding: 2rem 0;
        }
        .auth-logo {
            width: 52px;
            height: 52px;
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .success-logo {
            background: linear-gradient(135deg, var(--success), var(--success-emphasis));
            box-shadow: 0 4px 16px rgba(var(--success-rgb), 0.3);
        }
        .auth-heading {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-heading);
            margin-bottom: 0.25rem;
        }
        .auth-subheading {
            font-size: 0.9375rem;
            color: var(--text-muted);
            margin: 0;
        }
        .ticket-card {
            padding: 1rem 1.25rem;
            border-radius: var(--radius-lg);
            background: var(--bg-elevated);
            border: 1px solid var(--border-color);
        }
        .timeline {
            position: relative;
            padding-left: 32px;
            margin-bottom: 0.5rem;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 9px;
            top: 4px;
            bottom: 4px;
            width: 2px;
            background: var(--border-color);
        }
        .timeline-item {
            position: relative;
            padding-bottom: 1.25rem;
        }
        .timeline-item:last-child {
            padding-bottom: 0;
        }
        .timeline-marker {
            position: absolute;
            left: -23px;
            top: 4px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            border: 2px solid var(--bg-main);
            box-shadow: 0 0 0 2px var(--border-color);
        }
        .timeline-content h6 {
            margin-bottom: 0.125rem;
            font-weight: 600;
            font-size: 0.875rem;
            color: var(--text-heading);
        }
        .timeline-content p {
            margin-bottom: 0;
            font-size: 0.8125rem;
            color: var(--text-muted);
            line-height: 1.5;
        }
    </style>
}