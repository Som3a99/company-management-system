@model ResetPasswordByAdminViewModel
@{
    ViewData["Title"] = "Reset Employee Password (IT Admin)";
}

<div class="container">
    <div class="auth-page-wrapper">
        <div class="row justify-content-center account-readable w-100">
            <div class="col-md-8 col-lg-6">
                <div class="text-center mb-4 animate-in">
                    <div class="auth-logo mx-auto mb-3" style="background: linear-gradient(135deg, var(--danger), var(--danger-soft));">
                        <i class="fas fa-user-lock" style="font-size: 1.25rem; color: white;"></i>
                    </div>
                    <h2 class="auth-heading">Reset Employee Password</h2>
                    <p class="auth-subheading">IT Admin — Secure password reset with identity verification</p>
                </div>
                <div class="card auth-card animate-in" style="animation-delay: 0.08s">
                    <div class="card-body p-4">
                        <div class="alert alert-soft mb-4" style="font-size: 0.875rem; border-left: 3px solid var(--warning);">
                            <div class="d-flex gap-2">
                                <i class="fas fa-exclamation-triangle mt-1" style="color: var(--warning-emphasis);"></i>
                                <div>
                                    <strong>Security Notice:</strong> Verify employee identity in person before resetting password.
                                    Document the verification method in the notes below.
                                </div>
                            </div>
                        </div>

                        <form asp-action="ResetPasswordByAdmin" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 0.875rem;"></div>

                            <div class="mb-3">
                                <label asp-for="EmployeeEmail" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="EmployeeEmail" class="form-control" placeholder="employee@company.com" />
                                </div>
                                <span asp-validation-for="EmployeeEmail" class="text-danger" style="font-size: 0.8125rem;"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TemporaryPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                                    <input asp-for="TemporaryPassword" class="form-control" />
                                </div>
                                <span asp-validation-for="TemporaryPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                                <small class="form-text text-muted mt-1 d-block" style="font-size: 0.8125rem;">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Employee will be forced to change this password on next login.
                                </small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="AdminCurrentPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="AdminCurrentPassword" class="form-control" autocomplete="current-password" />
                                </div>
                                <span asp-validation-for="AdminCurrentPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                                <small class="form-text text-muted mt-1 d-block" style="font-size: 0.8125rem;">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Step-up verification: enter your own password before resetting another account.
                                </small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="VerificationNotes" class="form-label"></label>
                                <textarea asp-for="VerificationNotes" class="form-control" rows="3"
                                          placeholder="e.g., Verified via employee ID card, in-person verification on 2026-02-07"></textarea>
                                <span asp-validation-for="VerificationNotes" class="text-danger" style="font-size: 0.8125rem;"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-danger btn-primary-lg">
                                    <i class="fas fa-unlock-alt"></i> Reset Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .auth-page-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 220px);
            padding: 2rem 0;
        }
        .auth-logo {
            width: 52px;
            height: 52px;
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 16px rgba(var(--danger-rgb), 0.3);
        }
        .auth-heading {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-heading);
            margin-bottom: 0.25rem;
        }
        .auth-subheading {
            font-size: 0.9375rem;
            color: var(--text-muted);
            margin: 0;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}