@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="auth-page-wrapper">
        <div class="row justify-content-center account-readable w-100">
            <div class="col-md-6 col-lg-5">
                <div class="text-center mb-4 animate-in">
                    <div class="auth-logo mx-auto mb-3" style="background: linear-gradient(135deg, var(--warning), var(--warning-soft));">
                        <i class="fas fa-key" style="font-size: 1.25rem; color: white;"></i>
                    </div>
                    <h2 class="auth-heading">Change Password</h2>
                    <p class="auth-subheading">Update your account security credentials</p>
                </div>
                <div class="card auth-card animate-in" style="animation-delay: 0.08s">
                    <div class="card-body p-4">
                        <form asp-action="ChangePassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 0.875rem;"></div>

                            <div class="mb-3">
                                <label asp-for="CurrentPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="CurrentPassword" class="form-control" autocomplete="current-password" />
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                                    <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                                <small class="form-text text-muted mt-1 d-block" style="font-size: 0.8125rem;">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Must be at least 12 characters with uppercase, lowercase, digit, and special character.
                                </small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 0.8125rem;"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-primary-lg">
                                    <i class="fas fa-save"></i> Change Password
                                </button>
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .auth-page-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 220px);
            padding: 2rem 0;
        }
        .auth-logo {
            width: 52px;
            height: 52px;
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 16px rgba(var(--warning-rgb), 0.3);
        }
        .auth-heading {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-heading);
            margin-bottom: 0.25rem;
        }
        .auth-subheading {
            font-size: 0.9375rem;
            color: var(--text-muted);
            margin: 0;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}