@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card auth-card border-danger">
            <div class="card-header header-gradient danger">
                <h4 class="mb-0">
                    <i class="fas fa-ban me-2"></i>Access Denied
                </h4>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                <h5>You do not have permission to access this page.</h5>
                <p class="text-muted">
                    If you believe this is an error, please contact your manager or IT support.
                </p>

                @if (ViewData["ReturnUrl"] != null)
                {
                    <p class="text-muted small">
                        Attempted to access: <code>@ViewData["ReturnUrl"]</code>
                    </p>
                }

                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>