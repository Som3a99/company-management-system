@model UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">My Profile</h2>
            <p class="text-muted mb-0">Only your profile picture can be updated directly. Contact an administrator or manager for any other profile changes.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="@Model.ImageUrl"
                         alt="@Model.Username"
                         class="rounded-circle border mb-3"
                         style="width: 170px; height: 170px; object-fit: cover;" />

                    <h5 class="mb-1">@(!string.IsNullOrWhiteSpace(Model.FirstName) ? $"{Model.FirstName} {Model.LastName}" : Model.Username)</h5>
                    <p class="text-muted mb-2">@Model.Position</p>
                    <span class="badge bg-primary">@Model.PrimaryRole</span>

                    <hr />

                    <form asp-action="Profile" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="mb-3 text-start">
                            <label asp-for="ProfileImage" class="form-label fw-semibold"></label>
                            <input asp-for="ProfileImage" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif,.bmp" />
                            <small class="text-muted">Max file size: 10MB. Allowed: JPG, PNG, GIF, BMP.</small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100" @(Model.EmployeeId.HasValue ? "" : "disabled")>
                            <i class="fas fa-upload me-2"></i>Update Profile Picture
                        </button>
                        @if (!Model.EmployeeId.HasValue)
                        {
                            <p class="text-warning small mt-2 mb-0">This account is not linked to an employee profile, so image updates are unavailable.</p>
                        }
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Username</label>
                            <input class="form-control" value="@Model.Username" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Email</label>
                            <input class="form-control" value="@Model.Email" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Phone</label>
                            <input class="form-control" value="@(Model.PhoneNumber ?? "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Status</label>
                            <input class="form-control" value="@Model.AccountStatus" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Primary Role</label>
                            <input class="form-control" value="@Model.PrimaryRole" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Created At</label>
                            <input class="form-control" value="@Model.AccountCreatedAt.ToString("MMMM dd, yyyy")" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Employee Information (Read-Only)</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Employee ID</label>
                            <input class="form-control" value="@(Model.EmployeeId?.ToString() ?? "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Department</label>
                            <input class="form-control" value="@(!string.IsNullOrWhiteSpace(Model.DepartmentName) ? $"{Model.DepartmentCode} - {Model.DepartmentName}" : "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">First Name</label>
                            <input class="form-control" value="@(Model.FirstName ?? "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Last Name</label>
                            <input class="form-control" value="@(Model.LastName ?? "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Position</label>
                            <input class="form-control" value="@(Model.Position ?? "N/A")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Hire Date</label>
                            <input class="form-control" value="@(Model.HireDate?.ToString("MMMM dd, yyyy") ?? "N/A")" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}