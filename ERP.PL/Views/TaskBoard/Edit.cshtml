@model TaskUpsertViewModel
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container-fluid px-4 py-3">
    <h3>Edit Task #@Model.Id</h3>
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RowVersionBase64" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        @await Html.PartialAsync("_TaskForm", Model)
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>