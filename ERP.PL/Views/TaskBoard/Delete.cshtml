@model ERP.DAL.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container-fluid px-4 py-3">
    <h3>Delete Task #@Model.Id</h3>
    <div class="alert alert-warning">Are you sure you want to delete this task?</div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Project</dt>
        <dd class="col-sm-10">@Model.ProjectId</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(Model.RowVersion)" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>