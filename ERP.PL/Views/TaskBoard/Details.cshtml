@using TaskStatus = ERP.DAL.Models.TaskStatus;
@model TaskDetailsViewModel
@{
    ViewData["Title"] = $"Task #{Model.Task.Id}";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Task #@Model.Task.Id - @Model.Task.Title</h3>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Tasks</a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3"><strong>Status:</strong> @Model.Task.Status</div>
                <div class="col-md-3"><strong>Priority:</strong> @Model.Task.Priority</div>
                <div class="col-md-3"><strong>Project:</strong> @Model.Task.ProjectId</div>
                <div class="col-md-3"><strong>Assignee:</strong> @Model.Task.AssignedToEmployeeId</div>
                <div class="col-12"><strong>Description:</strong><br />@Model.Task.Description</div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-5">
            <div class="card h-100">
                <div class="card-header">Update Status</div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Task.Id" />
                        <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(Model.Task.RowVersion)" />
                        <div class="mb-3">
                            <select class="form-select" name="newStatus" asp-items="Html.GetEnumSelectList<TaskStatus>()"></select>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Status</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card h-100">
                <div class="card-header">Comments</div>
                <div class="card-body">
                    <form asp-action="AddComment" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Task.Id" />
                        <textarea name="content" class="form-control mb-2" rows="3" placeholder="Write a comment..."></textarea>
                        <button type="submit" class="btn btn-outline-primary">Add Comment</button>
                    </form>

                    <hr />

                    @if (!Model.Task.Comments.Any())
                    {
                        <p class="text-muted mb-0">No comments yet.</p>
                    }
                    else
                    {
                        foreach (var c in Model.Task.Comments.OrderByDescending(x => x.CreatedAt))
                        {
                            <div class="border rounded p-2 mb-2">
                                <div><small class="text-muted">@c.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></div>
                                <div>@c.Content</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>