@model PagedResult<ProjectViewModel>

@{
    ViewData["Title"] = "Projects";
    var searchTerm = ViewData["SearchTerm"] as string;
    var status = ViewData["Status"] as string ?? "all";

    // Calculate stats from ALL projects (not just current page)
    var totalProjects = Model?.TotalCount ?? 0;
    var planningProjects = Model?.Items?.Count(p => p.Status == ProjectStatus.Planning) ?? 0;
    var inProgressProjects = Model?.Items?.Count(p => p.Status == ProjectStatus.InProgress) ?? 0;
    var completedProjects = Model?.Items?.Count(p => p.Status == ProjectStatus.Completed) ?? 0;
    var onHoldProjects = Model?.Items?.Count(p => p.Status == ProjectStatus.OnHold) ?? 0;
    var cancelledProjects = Model?.Items?.Count(p => p.Status == ProjectStatus.Cancelled) ?? 0;
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                <div>
                    <h1>Project Management</h1>
                    <p>Manage projects, track progress, and assign resources across departments</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    <span>Create Project</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        <div class="row g-3 mb-4 animate-in">
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="stat-icon primary" style="flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@totalProjects</h3>
                                <p class="text-muted mb-0 small">Total Projects</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="stat-icon info" style="flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2v20M2 12h20" stroke="white" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@planningProjects</h3>
                                <p class="text-muted mb-0 small">Planning</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="stat-icon warning" style="flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                    <polyline points="12 6 12 12 16 14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--warning);">@inProgressProjects</h3>
                                <p class="text-muted mb-0 small">In Progress</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="stat-icon success" style="flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <polyline points="22 4 12 14.01 9 11.01" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--success);">@completedProjects</h3>
                                <p class="text-muted mb-0 small">Completed</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Search Bar - Server-side Form -->
    <div class="card mb-3 animate-in">
        <div class="card-body p-3">
            <form method="get" asp-action="Index" id="searchForm">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Search by project code, name, department, or manager..."
                                   value="@searchTerm"
                                   id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()" title="Clear search">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex gap-2 flex-wrap justify-content-lg-end">
                            <input type="hidden" name="status" id="statusFilter" value="@status">
                            <button type="button" class="btn btn-sm @(status == "all" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('all')">
                                All (@totalProjects)
                            </button>
                            <button type="button" class="btn btn-sm @(status == "planning" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('planning')">
                                Planning (@planningProjects)
                            </button>
                            <button type="button" class="btn btn-sm @(status == "inprogress" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('inprogress')">
                                In Progress (@inProgressProjects)
                            </button>
                            <button type="button" class="btn btn-sm @(status == "completed" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('completed')">
                                Completed (@completedProjects)
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        <div class="table-container animate-in">
            <table class="table table-hover mb-0" id="projectTable">
                <thead>
                    <tr>
                        <th style="width: 12%;">Code</th>
                        <th style="width: 20%;">Project Name</th>
                        <th style="width: 15%;">Department</th>
                        <th style="width: 18%;">Manager</th>
                        <th style="width: 10%;">Budget</th>
                        <th style="width: 10%;">Status</th>
                        <th class="text-center" style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Items.OrderBy(p => p.ProjectCode))
                    {
                        var statusBadgeClass = project.Status switch
                        {
                            ProjectStatus.Planning => "badge-status-planning",
                            ProjectStatus.InProgress => "badge-status-inprogress",
                            ProjectStatus.OnHold => "badge-status-onhold",
                            ProjectStatus.Completed => "badge-status-completed",
                            ProjectStatus.Cancelled => "badge-status-default",
                            _ => "badge-status-default"
                        };

                        <tr>
                            <td style="width: 12%;">
                                <span class="table-code">@project.ProjectCode</span>
                            </td>
                            <td style="width: 20%;">
                                @* Make project name clickable to Profile page *@
                                <a asp-action="Profile" asp-route-id="@project.Id" class="project-name-link">
                                    @project.ProjectName
                                </a>
                            </td>
                            <td style="width: 15%;">
                                @if (project.Department != null)
                                {
                                    <div>
                                        <span class="table-code" style="font-size: 0.75rem;">@project.Department.DepartmentCode</span>
                                        <br>
                                        <small class="text-muted">@project.Department.DepartmentName</small>
                                    </div>
                                }
                            </td>
                            <td style="width: 18%;">
                                @if (project.ProjectManager != null)
                                {
                                    <div>
                                        <strong style="font-size: 0.875rem;">@project.ProjectManager.FirstName @project.ProjectManager.LastName</strong>
                                        <br>
                                        <small class="text-muted">@project.ProjectManager.Position</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Not Assigned</span>
                                }
                            </td>
                            <td style="width: 10%;">
                                <strong style="color: var(--accent-main);">$@project.Budget.ToString("N2")</strong>
                            </td>
                            <td style="width: 10%;">
                                <span class="badge @statusBadgeClass" style="padding: 0.375rem 0.75rem; border-radius: 0.375rem; font-weight: 500; font-size: 0.8125rem;">
                                    @project.Status
                                </span>
                            </td>
                            <td class="text-center" style="width: 15%;">
                                <div class="d-inline-flex gap-2">
                                    @* Team Members Link *@
                                    <a asp-action="ProjectEmployees" asp-route-id="@project.Id"
                                       class="btn btn-sm btn-outline-primary"
                                       title="View Team Members">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" />
                                            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                                        </svg>
                                        Team
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary" title="Edit Project">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger" title="Delete Project">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            var paginationInfo = new PaginationInfoViewModel
            {
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount
            };

            <partial name="_PaginationPartial" model="@paginationInfo"
                     view-data="@(new ViewDataDictionary(ViewData) { { "ItemName", "projects" } })" />
        }
    }
    else
    {
        <div class="card animate-in">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <h5>No Projects Found</h5>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No projects found for "<strong>@searchTerm</strong>".</p>
                    <button onclick="clearSearch()" class="btn btn-outline-primary">
                        Clear Search
                    </button>
                }
                else if (status != "all")
                {
                    <p>No projects with @status status found.</p>
                    <button onclick="setStatusFilter('all')" class="btn btn-outline-primary">
                        Show All Projects
                    </button>
                }
                else
                {
                    <p>Get started by creating your first project to track work across your organization.</p>
                    <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <span>Create First Project</span>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');

            // Auto-submit on Enter in search
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        form.submit();
                    }
                });
            }

            // Focus on search input after page load
            if (searchInput && '@(!string.IsNullOrEmpty(searchTerm))' === 'False') {
                setTimeout(() => {
                    searchInput.focus();
                    if ('@searchTerm' !== '') {
                        searchInput.select();
                    }
                }, 100);
            }
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = 'all';
            updateFilterButtons('all');
            document.getElementById('searchForm').submit();
        }

        function setStatusFilter(status) {
            document.getElementById('statusFilter').value = status;
            updateFilterButtons(status);
            document.getElementById('searchForm').submit();
        }

        function updateFilterButtons(activeStatus) {
            // Update button styles
            const buttons = document.querySelectorAll('[onclick^="setStatusFilter"]');
            buttons.forEach(button => {
                const status = button.getAttribute('onclick').match(/'([^']+)'/)[1];
                if (status === activeStatus) {
                    button.className = button.className.replace('btn-outline-secondary', 'btn-primary');
                } else {
                    button.className = button.className.replace('btn-primary', 'btn-outline-secondary');
                }
            });
        }
    </script>
}