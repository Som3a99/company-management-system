@model ProjectViewModel

@{
    ViewData["Title"] = $"{Model.ProjectName} - Team Members";

    // Get paginated employees from ViewBag
    var pagedEmployees = ViewBag.PagedEmployees as PagedResult<ERP.PL.ViewModels.Employee.EmployeeViewModel> ??
                        new PagedResult<ERP.PL.ViewModels.Employee.EmployeeViewModel>();

    var searchTerm = ViewData["SearchTerm"] as string;
    var status = ViewData["Status"] as string ?? "all";
    var projectId = ViewData["ProjectId"] as int? ?? Model.Id;

    // Calculate stats from ALL assigned employees
    var allEmployees = Model.AssignedEmployees?.Where(e => !e.IsDeleted) ?? Enumerable.Empty<ERP.DAL.Models.Employee>();
    var activeEmployees = allEmployees.Where(e => e.IsActive);
    var inactiveEmployees = allEmployees.Where(e => !e.IsActive);
    var totalEmployeesCount = allEmployees.Count();
    var activeCount = activeEmployees.Count();
    var inactiveCount = inactiveEmployees.Count();
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center gap-3 mb-2">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <div>
                    <h1 class="mb-0">@Model.ProjectName</h1>
                </div>
            </div>
            <p>Viewing all team members assigned to this project</p>
        </div>
    </div>

    <!-- Project Info Card -->
    <div class="row g-4 mb-4 animate-in">
        <div class="col-lg-12">
            <div class="card" style="background: linear-gradient(135deg, var(--accent-main) 0%, var(--accent-light) 100%); color: white;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="header-icon-container" style="width: 64px; height: 64px;">
                                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="white" stroke-width="2" />
                                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="white" stroke-width="2" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="mb-1">@Model.ProjectName</h3>
                                    <p class="mb-0 opacity-75">Project Code: @Model.ProjectCode</p>
                                    @if (Model.ProjectManager != null)
                                    {
                                        <p class="mb-0 opacity-75 mt-1">
                                            Manager: <strong>@Model.ProjectManager.FirstName @Model.ProjectManager.LastName</strong>
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-md-end">
                                <h2 class="mb-1">@totalEmployeesCount</h2>
                                <p class="mb-0 opacity-75">Team Members</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card mb-4 animate-in">
        <div class="card-body">
            <h5 class="card-title mb-3">Assign Employee to Project</h5>
            <form asp-action="AssignEmployee" method="post" class="row g-2 align-items-end">
                @Html.AntiForgeryToken()
                <input type="hidden" name="projectId" value="@projectId" />
                <div class="col-md-8">
                    <label class="form-label">Employee</label>
                    <select name="employeeId" class="form-select" asp-items="ViewBag.EligibleEmployees">
                        <option value="">-- Select employee --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4 animate-in">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon success">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <polyline points="22 4 12 14.01 9 11.01" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--success);">@activeCount</h3>
                            <p class="text-muted mb-0 small">Active Members</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon neutral">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <line x1="15" y1="9" x2="9" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <line x1="9" y1="9" x2="15" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--gray-500);">@inactiveCount</h3>
                            <p class="text-muted mb-0 small">Inactive Members</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon primary">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2v20M2 12h20" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@(allEmployees.Any() ? allEmployees.Average(e => e.Salary).ToString("C0") : "$0")</h3>
                            <p class="text-muted mb-0 small">Avg. Salary</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter - Server-side Form -->
    <div class="card mb-3 animate-in">
        <div class="card-body p-3">
            <form method="get" asp-action="ProjectEmployees" asp-route-id="@projectId" id="searchForm">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Search by name, position, department, or contact..."
                                   value="@searchTerm"
                                   id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()" title="Clear search">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div class="d-flex gap-2 flex-wrap">
                                <input type="hidden" name="status" id="statusFilter" value="@status">
                                <button type="button" class="btn btn-sm @(status == "all" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('all')">
                                    All Members (@totalEmployeesCount)
                                </button>
                                <button type="button" class="btn btn-sm @(status == "active" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('active')">
                                    Active Only (@activeCount)
                                </button>
                                <button type="button" class="btn btn-sm @(status == "inactive" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('inactive')">
                                    Inactive Only (@inactiveCount)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (pagedEmployees.Items != null && pagedEmployees.Items.Any())
    {
        <div class="table-container animate-in">
            <table class="table table-hover mb-0" id="employeeTable">
                <thead>
                    <tr>
                        <th style="width: 60px;">Photo</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Department</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in pagedEmployees.Items)
                    {
                        <tr>
                            <td>
                                <img src="@employee.ImageUrl"
                                     alt="@employee.FirstName @employee.LastName"
                                     style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; border: 2px solid var(--gray-200);"
                                     onerror="this.src='https://via.placeholder.com/40?text=@(employee.FirstName[0])@(employee.LastName[0])'" />
                            </td>
                            <td>
                                <span class="table-code">@employee.Id</span>
                            </td>
                            <td>
                                <div>
                                    <strong>@employee.FirstName @employee.LastName</strong>
                                    <br>
                                    <small class="text-muted">@employee.Email</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge-custom">@employee.Position</span>
                            </td>
                            <td>
                                @if (employee.Department != null)
                                {
                                    <div>
                                        <span class="table-code" style="font-size: 0.75rem;">@employee.Department.DepartmentCode</span>
                                        <br>
                                        <small class="text-muted">@employee.Department.DepartmentName</small>
                                    </div>
                                }
                            </td>
                            <td>
                                <small class="text-muted">@employee.PhoneNumber</small>
                            </td>
                            <td>
                                @if (employee.IsActive)
                                {
                                    <span class="badge badge-status-active">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -1px;">
                                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                            <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-status-inactive">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -1px;">
                                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                            <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                            <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        </svg>
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <form asp-action="RemoveEmployee" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="projectId" value="@projectId" />
                                    <input type="hidden" name="employeeId" value="@employee.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove from Project" onclick="return confirm('Remove this employee from project?');">
                                        Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Add Pagination -->
        @if (pagedEmployees.TotalPages > 1)
        {
            var paginationInfo = new PaginationInfoViewModel
            {
                PageNumber = pagedEmployees.PageNumber,
                PageSize = pagedEmployees.PageSize,
                TotalCount = pagedEmployees.TotalCount
            };

            <partial name="_PaginationPartial" model="@paginationInfo"
                     view-data="@(new ViewDataDictionary(ViewData) { { "ItemName", "team members" } })" />
        }
    }
    else
    {
        <div class="card animate-in">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <h5>No Team Members Found</h5>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No team members found for "<strong>@searchTerm</strong>" in this project.</p>
                    <button onclick="clearSearch()" class="btn btn-outline-primary">
                        Clear Search
                    </button>
                }
                else if (status != "all")
                {
                    <p>No @(status) team members in this project.</p>
                    <button onclick="setStatusFilter('all')" class="btn btn-outline-primary">
                        Show All Team Members
                    </button>
                }
                else
                {
                    <p>This project doesn't have any team members assigned yet.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-primary-lg">
                        <span>View All Employees</span>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Set up enhanced UX for server-side search
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const tableContainer = document.querySelector('.table-container');

            // Show loading indicator on form submit
            if (form) {
                form.addEventListener('submit', function() {
                    if (loadingIndicator && tableContainer) {
                        // Fade out the table
                        tableContainer.style.opacity = '0.5';
                        tableContainer.style.transition = 'opacity 0.2s';

                        // Show loading indicator
                        loadingIndicator.style.display = 'block';

                        // Scroll to table position for better UX
                        const tableTop = tableContainer.offsetTop - 100;
                        window.scrollTo({
                            top: tableTop,
                            behavior: 'smooth'
                        });
                    }
                });
            }

            // Auto-submit on Enter in search (optional enhancement)
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        form.submit();
                    }
                });
            }

            // Focus on search input after page load
            if (searchInput && '@(!string.IsNullOrEmpty(searchTerm))' === 'False') {
                setTimeout(() => {
                    searchInput.focus();
                    if ('@searchTerm' !== '') {
                        searchInput.select();
                    }
                }, 100);
            }
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = 'all';
            updateFilterButtons('all');
            document.getElementById('searchForm').submit();
        }

        function setStatusFilter(status) {
            document.getElementById('statusFilter').value = status;
            updateFilterButtons(status);
            document.getElementById('searchForm').submit();
        }

        function updateFilterButtons(activeStatus) {
            // Update button styles
            const buttons = document.querySelectorAll('[onclick^="setStatusFilter"]');
            buttons.forEach(button => {
                const status = button.getAttribute('onclick').match(/'([^']+)'/)[1];
                if (status === activeStatus) {
                    button.className = button.className.replace('btn-outline-secondary', 'btn-primary');
                } else {
                    button.className = button.className.replace('btn-primary', 'btn-outline-secondary');
                }
            });
        }
    </script>
}