@model ProjectProfileViewModel

@{
    ViewData["Title"] = $"{Model.ProjectName} - Profile";

    // Status badge class
    var statusBadgeClass = Model.Status switch
    {
        ProjectStatus.Planning => "badge-status-planning",
        ProjectStatus.InProgress => "badge-status-inprogress",
        ProjectStatus.OnHold => "badge-status-onhold",
        ProjectStatus.Completed => "badge-status-completed",
        ProjectStatus.Cancelled => "badge-status-default",
        _ => "badge-status-default"
    };

    // Calculate progress percentage
    var totalDays = Model.EndDate.HasValue ? (Model.EndDate.Value - Model.StartDate).Days : 0;
    var elapsedDays = Model.DaysInProgress;
    var progressPercentage = totalDays > 0 ? Math.Min(100, (int)((elapsedDays / (double)totalDays) * 100)) : 0;
}

<style>
    .team-member-avatar {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid var(--gray-200);
        transition: var(--transition);
        cursor: pointer;
    }

    .team-member-avatar:hover {
        transform: scale(1.1);
        border-color: var(--accent-main);
    }
</style>

<div class="container-fluid px-4">
    <!-- Profile Header -->
    <div class="profile-header animate-in">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div class="d-flex align-items-center gap-3">
                <div class="header-icon-container" style="width: 64px; height: 64px; flex-shrink: 0;">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="white" stroke-width="2" />
                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="white" stroke-width="2" />
                    </svg>
                </div>
                <div>
                    <h1 class="mb-1" style="font-size: 2rem; font-weight: 700;">@Model.ProjectName</h1>
                    <p class="mb-0 opacity-75">@Model.ProjectCode</p>
                    <p class="mb-0 opacity-75 small">
                        Started @Model.StartDate.ToString("MMMM dd, yyyy")
                        @if (Model.EndDate.HasValue)
                        {
                            <span> • Ends @Model.EndDate.Value.ToString("MMMM dd, yyyy")</span>
                        }
                    </p>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" />
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" />
                    </svg>
                    Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="2" />
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="currentColor" stroke-width="2" />
                    </svg>
                    Delete
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4 animate-in">
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon primary">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="white" stroke-width="2" />
                                <circle cx="9" cy="7" r="4" stroke="white" stroke-width="2" />
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="white" stroke-width="2" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@Model.TotalTeamMembers</h3>
                            <p class="text-muted mb-0 small">Team Members</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon success">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <path d="M12 6v6l4 2" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--success);">@Model.DaysInProgress</h3>
                            <p class="text-muted mb-0 small">Days Active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon warning">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <line x1="12" y1="1" x2="12" y2="23" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--warning);">@Model.Budget.ToString("C0")</h3>
                            <p class="text-muted mb-0 small">Total Budget</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon info">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <line x1="12" y1="1" x2="12" y2="23" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                                <span class="badge @statusBadgeClass" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                @Model.Status
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Forecast != null)
    {
        var forecastBadgeClass = Model.Forecast.Status switch
        {
            "On Track" => "bg-success",
            "At Risk" => "bg-warning text-dark",
            "Behind" => "bg-danger",
            _ => "bg-secondary"
        };
        <div class="card mb-4 border-start border-4 border-primary animate-in">
            <div class="card-body">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                    </svg>
                    <strong>AI Completion Forecast</strong>
                    <span class="badge @forecastBadgeClass ms-2">@Model.Forecast.Status</span>
                </div>
                <div class="row g-3">
                    <div class="col-md-3">
                        <small class="text-muted d-block">Estimated Completion</small>
                        <strong>@Model.Forecast.EstimatedCompletionDate.ToString("MMM dd, yyyy")</strong>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted d-block">Velocity</small>
                        <strong>@Model.Forecast.Velocity tasks/day</strong>
                        <small class="text-muted d-block">(@Model.Forecast.CompletedTasksLast30Days completed in last 30d)</small>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted d-block">Remaining Tasks</small>
                        <strong>@Model.Forecast.RemainingTasks</strong>
                    </div>
                    @if (Model.Forecast.DaysBehindSchedule > 0)
                    {
                        <div class="col-md-3">
                            <small class="text-muted d-block">Days Behind Schedule</small>
                            <strong class="text-danger">@Model.Forecast.DaysBehindSchedule</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="row g-4 animate-in">
        <!-- Left Column -->
        <div class="col-lg-4">
            <!-- Project Details Card -->
            <div class="card mb-4">
                <div class="card-header-custom">
                    Project Details
                </div>
                <div class="card-body">
                    <!-- Department -->
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Department</small>
                        @if (Model.DepartmentId > 0 && !string.IsNullOrEmpty(Model.DepartmentName))
                        {
                            <a asp-controller="Department" asp-action="Profile" asp-route-id="@Model.DepartmentId" class="clickable-link fw-semibold">
                                @Model.DepartmentCode - @Model.DepartmentName
                            </a>
                        }
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Description</small>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    }

                    <!-- Timeline -->
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Timeline</small>
                        <div class="d-flex align-items-center gap-2">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" />
                            </svg>
                            <span>@Model.StartDate.ToString("MMM dd, yyyy")</span>
                            @if (Model.EndDate.HasValue)
                            {
                                <span>→</span>
                                <span>@Model.EndDate.Value.ToString("MMM dd, yyyy")</span>
                            }
                        </div>
                        @if (Model.DaysRemaining.HasValue)
                        {
                            <small class="text-muted">@Model.DaysRemaining days remaining</small>
                        }
                    </div>

                    <!-- Progress Bar -->
                    @if (Model.EndDate.HasValue)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Progress (@progressPercentage%)</small>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar" style="width: @progressPercentage%; background-color: var(--primary-main);"></div>
                            </div>
                        </div>
                    }

                    <!-- Budget Per Member -->
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Budget Per Team Member</small>
                        <strong style="color: var(--accent-main);">@Model.BudgetPerTeamMember.ToString("C0")</strong>
                    </div>

                    <!-- Created Date -->
                    <div>
                        <small class="text-muted d-block mb-1">Created</small>
                        <span>@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Project Manager Card -->
            <div class="card">
                <div class="card-header-custom">
                    Project Manager
                </div>
                <div class="card-body">
                    @if (Model.ProjectManagerId.HasValue && !string.IsNullOrEmpty(Model.ManagerFullName))
                    {
                        <div class="d-flex align-items-center gap-3">
                            <a asp-controller="Employee" asp-action="Profile" asp-route-id="@Model.ProjectManagerId">
                                <img src="@Model.ManagerImageUrl"
                                     alt="@Model.ManagerFullName"
                                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%; border: 3px solid var(--primary-main); cursor: pointer;"
                                     onerror="this.src='https://via.placeholder.com/60?text=@(Model.ManagerFirstName?[0])@(Model.ManagerLastName?[0])'" />
                            </a>
                            <div class="flex-grow-1">
                                <a asp-controller="Employee" asp-action="Profile" asp-route-id="@Model.ProjectManagerId" class="clickable-link">
                                    <strong style="font-size: 1.1rem;">@Model.ManagerFullName</strong>
                                </a>
                                <p class="text-muted mb-1 small">@Model.ManagerPosition</p>
                                @if (!string.IsNullOrEmpty(Model.ManagerEmail))
                                {
                                    <a href="mailto:@Model.ManagerEmail" class="text-primary small">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -2px;">
                                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" />
                                            <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" />
                                        </svg>
                                        @Model.ManagerEmail
                                    </a>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="mb-2">
                                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            </svg>
                            <p class="mb-0">No manager assigned</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Team Members -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header-custom d-flex justify-content-between align-items-center">
                    <span>Team Members (@Model.TotalTeamMembers)</span>
                    <a asp-action="ProjectEmployees" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.TeamMembers != null && Model.TeamMembers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 60px;"></th>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Department</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.TeamMembers)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Employee" asp-action="Profile" asp-route-id="@member.Id">
                                                    <img src="@member.ImageUrl"
                                                         alt="@member.FullName"
                                                         class="team-member-avatar"
                                                         onerror="this.src='https://via.placeholder.com/40?text=@(member.FirstName[0])@(member.LastName[0])'" />
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="Employee" asp-action="Profile" asp-route-id="@member.Id" class="clickable-link">
                                                    <strong>@member.FullName</strong>
                                                </a>
                                                <br>
                                                <small class="text-muted">@member.Email</small>
                                            </td>
                                            <td>
                                                <span class="badge-custom">@member.Position</span>
                                            </td>
                                            <td>
                                                @if (member.DepartmentId.HasValue && !string.IsNullOrEmpty(member.DepartmentName))
                                                {
                                                    <a asp-controller="Department" asp-action="Profile" asp-route-id="@member.DepartmentId" class="clickable-link">
                                                        @member.DepartmentName
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @if (member.IsActive)
                                                {
                                                    <span class="badge badge-status-active">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-status-inactive">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.TotalTeamMembers > 10)
                        {
                            <div class="p-3 text-center border-top">
                                <a asp-action="ProjectEmployees" asp-route-id="@Model.Id" class="btn btn-primary">
                                    View All @Model.TotalTeamMembers Team Members
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" />
                                    <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2" />
                                </svg>
                            </div>
                            <h5>No Team Members</h5>
                            <p>This project doesn't have any team members assigned yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
