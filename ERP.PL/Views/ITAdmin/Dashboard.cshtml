@{
    ViewData["Title"] = "IT Admin Dashboard";
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="section-header">
                <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                    <div>
                        <h1>IT Admin Dashboard</h1>
                        <p>System administration, access control, and security oversight</p>
                    </div>
                </div>
                <a asp-controller="UserManagement" asp-action="Index" class="btn btn-primary btn-primary-lg">
                    <i class="fas fa-users-cog"></i>
                    Manage Users
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Pending Password Resets -->
        <div class="col-md-4 mb-4">
            <div class="card stat-card card-soft">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Pending Resets</h6>
                            <h2 class="mb-0 text-warning">@ViewBag.PendingResets</h2>
                        </div>
                        <div class="stat-icon warning">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                    <a asp-action="PasswordResetRequests" asp-route-status="pending"
                       class="btn btn-sm btn-outline-warning mt-3 w-100">
                        <i class="fas fa-eye"></i> View Requests
                    </a>
                </div>
            </div>
        </div>

        <!-- Expired Requests -->
        <div class="col-md-4 mb-4">
            <div class="card stat-card card-soft">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Expired Requests</h6>
                            <h2 class="mb-0 text-danger">@ViewBag.ExpiredResets</h2>
                        </div>
                        <div class="stat-icon danger">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                    <a asp-action="PasswordResetRequests" asp-route-status="expired"
                       class="btn btn-sm btn-outline-danger mt-3 w-100">
                        <i class="fas fa-eye"></i> View Expired
                    </a>
                </div>
            </div>
        </div>

        <!-- Locked Accounts -->
        <div class="col-md-4 mb-4">
            <div class="card stat-card card-soft">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Locked Accounts</h6>
                            <h2 class="mb-0 text-info">@ViewBag.LockedAccounts</h2>
                        </div>
                        <div class="stat-icon info">
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                    <a asp-controller="UserManagement" asp-action="Index"
                       class="btn btn-sm btn-outline-info mt-3 w-100">
                        <i class="fas fa-users"></i> View Accounts
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card card-soft">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Cache Health</h6>
                    <div class="d-flex flex-wrap gap-4">
                        <div><strong>Hit Ratio:</strong> @ViewBag.CacheHitRatio%</div>
                        <div><strong>Entries:</strong> @ViewBag.CacheEntryCount</div>
                        <div><strong>Estimated Size:</strong> @ViewBag.CacheEstimatedSize</div>
                    </div>
                    @if (ViewBag.CachePressureWarning != null)
                    {
                        <div class="alert alert-warning mt-3 mb-0">@ViewBag.CachePressureWarning</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card card-soft">
                <div class="card-header header-gradient">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body quick-actions">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="UserManagement"
                               asp-action="EmployeesWithoutAccounts"
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-user-plus"></i> Create User Accounts
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-action="PasswordResetRequests"
                               class="btn btn-outline-warning w-100">
                                <i class="fas fa-key"></i> Password Reset Queue
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="UserManagement"
                               asp-action="Index"
                               class="btn btn-outline-info w-100">
                                <i class="fas fa-users-cog"></i> Manage All Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>