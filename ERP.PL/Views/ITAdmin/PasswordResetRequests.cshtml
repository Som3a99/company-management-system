@model PagedResult<PasswordResetRequestViewModel>

@{
    ViewData["Title"] = "Password Reset Requests";
    var statusFilter = ViewData["StatusFilter"] as string ?? "pending";
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="section-header">
                <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                    <div>
                        <h1>Password Reset Requests</h1>
                        <p>Review, approve, or deny requests with security context</p>
                    </div>
                </div>
                <a asp-action="Dashboard" class="btn btn-outline-light">
                    <i class="fas fa-home me-2"></i>Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Status Filter Tabs -->
    <ul class="nav nav-tabs nav-tabs-soft mb-3">
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "pending" ? "active" : "")"
               asp-action="PasswordResetRequests"
               asp-route-status="pending">
                <i class="fas fa-clock"></i> Pending
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "expired" ? "active" : "")"
               asp-action="PasswordResetRequests"
               asp-route-status="expired">
                <i class="fas fa-exclamation-triangle"></i> Expired
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "approved" ? "active" : "")"
               asp-action="PasswordResetRequests"
               asp-route-status="approved">
                <i class="fas fa-check-circle"></i> Approved
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "denied" ? "active" : "")"
               asp-action="PasswordResetRequests"
               asp-route-status="denied">
                <i class="fas fa-times-circle"></i> Denied
            </a>
        </li>
    </ul>

    @if (TempData["ApprovedTempPassword"] != null)
    {
        <div class="alert alert-success alert-soft d-flex flex-column gap-1">
            <div><strong><i class="fas fa-check-circle me-2"></i>Reset approved successfully.</strong></div>
            <div>Ticket: <strong>@TempData["ApprovedTempPasswordTicket"]</strong></div>
            <div>Temporary Password (show once): <code>@TempData["ApprovedTempPassword"]</code></div>
            <small class="text-muted">Share this temporary password with the employee through a secure channel.</small>
        </div>
    }

    @if (Model.TotalCount == 0)
    {
        <div class="alert alert-info alert-soft">
            <i class="fas fa-info-circle"></i>
            No @statusFilter password reset requests found.
        </div>
    }
    else
    {
        @if (statusFilter == "expired")
        {
            <div class="alert alert-warning alert-soft">
                <form asp-action="MarkExpiredRequests" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-warning">
                        <i class="fas fa-trash"></i> Mark All as Expired
                    </button>
                </form>
                <span class="ms-2">Clean up expired requests from the pending queue</span>
            </div>
        }

        <div class="card card-soft">
            <div class="card-body">
                <div class="table-responsive table-container table-soft">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ticket #</th>
                                <th>User</th>
                                <th>Requested</th>
                                <th>Expires / Resolved</th>
                                <th>IP Address</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.Items)
                            {
                                var employeeName = string.IsNullOrWhiteSpace(request.EmployeeName) ? "N/A" : request.EmployeeName;
                                <tr class="@(request.IsExpired ? "table-warning" : "")">
                                    <td><strong>@request.TicketNumber</strong></td>
                                    <td>
                                        <div>@request.UserEmail</div>
                                        @if (!string.IsNullOrEmpty(request.EmployeeName))
                                        {
                                            <small class="text-muted">@request.EmployeeName</small>
                                        }
                                    </td>
                                    <td>
                                        @request.RequestedAt.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@request.RequestedAt.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        @if (request.Status == ResetStatus.Pending)
                                        {
                                            @if (request.IsExpired)
                                            {
                                                <span class="badge bg-danger">EXPIRED</span>
                                            }
                                            else
                                            {
                                                <span>@request.ExpiresAt.ToString("hh:mm tt")</span>
                                                <br />
                                                <small class="text-muted">@((int)request.TimeUntilExpiry.TotalMinutes) min remaining</small>
                                            }
                                        }
                                        else if (request.ResolvedAt.HasValue)
                                        {
                                            <div>@request.ResolvedAt.Value.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">by @request.ResolvedBy</small>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted font-monospace">
                                            @(string.IsNullOrWhiteSpace(request.IpAddress) ? "N/A" : request.IpAddress)
                                        </small>
                                    </td>
                                    <td>
                                        @switch (request.Status)
                                        {
                                            case ResetStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case ResetStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case ResetStatus.Denied:
                                                <span class="badge bg-danger">Denied</span>
                                                @if (!string.IsNullOrEmpty(request.DenialReason))
                                                {
                                                    <br />
                                                    <small class="text-muted">@request.DenialReason</small>
                                                }
                                                break;
                                            case ResetStatus.Expired:
                                                <span class="badge bg-secondary">Expired</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (request.Status == ResetStatus.Pending && !request.IsExpired)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-success"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#approveModal"
                                                    data-request-id="@request.Id"
                                                    data-ticket="@request.TicketNumber"
                                                    data-email="@request.UserEmail"
                                                    data-name="@employeeName">
                                                <i class="fas fa-check"></i> Approve
                                            </button>

                                            <button type="button"
                                                    class="btn btn-sm btn-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#denyModal"
                                                    data-request-id="@request.Id"
                                                    data-ticket="@request.TicketNumber"
                                                    data-email="@request.UserEmail"
                                                    data-name="@employeeName">
                                                <i class="fas fa-times"></i> Deny
                                            </button>
                                        }
                                        else
                                        {
                                            <em class="text-muted">No action</em>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination *@
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Request pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="PasswordResetRequests"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-status="@statusFilter">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="PasswordResetRequests"
                                       asp-route-pageNumber="@i"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-status="@statusFilter">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="PasswordResetRequests"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-status="@statusFilter">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <p class="text-center text-muted">
                        Showing @Model.StartIndex - @Model.EndIndex of @Model.TotalCount requests
                    </p>
                }
            </div>
        </div>
}
</div>

<!-- Single reusable Approve Modal -->
<div class="modal" id="approveModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="ApproveReset" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="requestId" id="approveRequestId" />

                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="approveModalLabel">
                        <i class="fas fa-check-circle me-1"></i> Approve Reset
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Security Notice:</strong> Ensure you've verified the user's identity before approving.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Ticket:</dt>
                        <dd class="col-sm-8" id="approveTicket"></dd>

                        <dt class="col-sm-4">User:</dt>
                        <dd class="col-sm-8">
                            <div id="approveEmail"></div>
                            <small class="text-muted" id="approveName"></small>
                        </dd>
                    </dl>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label" for="approveTemporaryPassword">
                            <strong>Temporary Password</strong>
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="password"
                                   name="temporaryPassword"
                                   id="approveTemporaryPassword"
                                   class="form-control"
                                   required
                                   minlength="12"
                                   placeholder="Enter secure temporary password" />
                            <button class="btn btn-outline-secondary" type="button" data-toggle-password="approveTemporaryPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <small class="text-muted">
                            Must meet password policy: 12+ chars, uppercase, lowercase, digit, special char.
                            Share this temporary password with the employee securely.
                        </small>
                    </div>

                    <div class="alert alert-info">
                        <strong>What happens next:</strong>
                        <ul class="mb-0 mt-2">
                            <li>User can login with temporary password</li>
                            <li>They will be forced to change it immediately</li>
                            <li>Account lockout will be reset</li>
                        </ul>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Single reusable Deny Modal -->
<div class="modal" id="denyModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="denyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="DenyReset" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="requestId" id="denyRequestId" />

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="denyModalLabel">
                        <i class="fas fa-times-circle me-1"></i> Deny Reset
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p><strong>Ticket:</strong> <span id="denyTicket"></span></p>
                    <p><strong>User:</strong> <span id="denyEmail"></span></p>

                    <div class="mb-3">
                        <label class="form-label" for="denyReason">Reason for Denial (optional)</label>
                        <textarea name="denialReason"
                                  id="denyReason"
                                  class="form-control"
                                  rows="3"
                                  placeholder="e.g., Requires in-person verification"></textarea>
                    </div>

                    <div class="alert alert-warning mb-0">
                        User will need to visit IT desk for in-person verification
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Deny Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .modal .modal-dialog {
            transition: none !important;
            transform: none !important;
        }

        .modal .modal-content {
            box-shadow: 0 12px 28px rgba(15, 23, 42, 0.25);
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const approveModal = document.getElementById('approveModal');
            const denyModal = document.getElementById('denyModal');

            approveModal.addEventListener('show.bs.modal', function (event) {
                const triggerButton = event.relatedTarget;
                if (!triggerButton) return;

                const requestId = triggerButton.getAttribute('data-request-id');
                const ticket = triggerButton.getAttribute('data-ticket');
                const email = triggerButton.getAttribute('data-email');
                const name = triggerButton.getAttribute('data-name');

                document.getElementById('approveRequestId').value = requestId || '';
                document.getElementById('approveTicket').textContent = ticket || '';
                document.getElementById('approveEmail').textContent = email || '';
                document.getElementById('approveName').textContent = name && name !== 'N/A' ? name : '';
                document.getElementById('approveTemporaryPassword').value = '';
            });

            denyModal.addEventListener('show.bs.modal', function (event) {
                const triggerButton = event.relatedTarget;
                if (!triggerButton) return;

                const requestId = triggerButton.getAttribute('data-request-id');
                const ticket = triggerButton.getAttribute('data-ticket');
                const email = triggerButton.getAttribute('data-email');

                document.getElementById('denyRequestId').value = requestId || '';
                document.getElementById('denyTicket').textContent = ticket || '';
                document.getElementById('denyEmail').textContent = email || '';
                document.getElementById('denyReason').value = '';
            });

            document.addEventListener('click', function (event) {
                const toggleButton = event.target.closest('[data-toggle-password]');
                if (!toggleButton) return;

                const inputId = toggleButton.getAttribute('data-toggle-password');
                const input = document.getElementById(inputId);
                if (!input) return;

                const isMasked = input.type === 'password';
                input.type = isMasked ? 'text' : 'password';
                toggleButton.innerHTML = isMasked
                    ? '<i class="fas fa-eye-slash"></i>'
                    : '<i class="fas fa-eye"></i>';
            });
        });
    </script>
}