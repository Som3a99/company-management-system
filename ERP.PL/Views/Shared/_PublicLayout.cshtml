<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyFlow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERP.PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="navbar-container">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="3" y="3" width="7" height="7" rx="1.5" fill="currentColor" />
                            <rect x="3" y="14" width="7" height="7" rx="1.5" fill="currentColor" />
                            <rect x="14" y="3" width="7" height="7" rx="1.5" fill="currentColor" />
                            <rect x="14" y="14" width="7" height="7" rx="1.5" fill="currentColor" />
                        </svg>
                    </div>
                    <span class="brand-text">CompanyFlow</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center gap-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <button type="button" class="nav-link theme-toggle-btn" data-theme-toggle aria-label="Toggle dark mode" title="Toggle dark mode">
                                <i class="fas fa-moon" data-theme-icon></i>
                            </button>
                        </li>
                        <li class="nav-item ms-1">
                            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-arrow-right me-1"></i>Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer-custom">
        <div class="container-fluid px-4">
            <div class="footer-content">
                <span class="footer-text">&copy; 2026 CompanyFlow. All rights reserved.</span>
                <span class="footer-version">v1.0.0</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>