@model DepartmentViewModel

@{
    ViewData["Title"] = "Create Department";
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <h1>Create New Department</h1>
            <p>Add a new department to your organizational structure</p>
        </div>
    </div>

    <div class="row animate-in">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="card">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="DepartmentCode" class="form-label">Department Code</label>
                            <input asp-for="DepartmentCode" class="form-control" placeholder="e.g., ENG_001" />
                            <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                            <small class="form-text text-muted mt-1 d-block">
                                Format: Three uppercase letters, underscore, three digits (e.g., ENG_001, HR_001)
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="DepartmentName" class="form-label">Department Name</label>
                            <input asp-for="DepartmentName" class="form-control" placeholder="e.g., Engineering" />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>

                        <!-- ✅ NEW: Manager Selection -->
                        <div class="form-group">
                            <label asp-for="ManagerId" class="form-label">
                                Department Manager
                                <span class="text-muted">(Optional)</span>
                            </label>
                            <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
                                <option value="">-- No Manager Assigned --</option>
                            </select>
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                            <small class="form-text text-muted mt-1 d-block">
                                Select an active employee to manage this department. Only employees not currently managing another department are shown.
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatedAt" class="form-label">Created Date</label>
                            <input asp-for="CreatedAt" class="form-control" type="date" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <!-- ✅ NEW: Info alert about manager assignment -->
                        <div class="alert alert-info d-flex align-items-start gap-3" style="background-color: #eff6ff; border: 1px solid #bfdbfe; border-radius: var(--radius-md);">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="flex-shrink: 0; margin-top: 2px;">
                                <circle cx="12" cy="12" r="10" stroke="#3b82f6" stroke-width="2" />
                                <path d="M12 16v-4M12 8h.01" stroke="#3b82f6" stroke-width="2" stroke-linecap="round" />
                            </svg>
                            <div style="color: #1e40af;">
                                <strong style="display: block; margin-bottom: 4px;">About Department Managers</strong>
                                <small>A department manager has authority over all employees and projects within their department. You can assign a manager now or leave it empty and assign one later.</small>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <polyline points="17 21 17 13 7 13 7 21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <polyline points="7 3 7 8 15 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                Create Department
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}