@model DepartmentViewModel

@{
    ViewData["Title"] = $"{Model.DepartmentName} - Projects";

    // Get paginated projects from ViewBag
    var pagedProjects = ViewBag.PagedProjects as PagedResult<ProjectViewModel> ??
                        new PagedResult<ProjectViewModel>();

    var searchTerm = ViewData["SearchTerm"] as string;
    var status = ViewData["Status"] as string ?? "all";
    var departmentId = ViewData["DepartmentId"] as int? ?? Model.Id;

    // Calculate stats from ALL projects
    var allProjects = Model.Projects?.Where(p => !p.IsDeleted) ?? Enumerable.Empty<ERP.DAL.Models.Project>();
    var planningProjects = allProjects.Where(p => p.Status == ProjectStatus.Planning);
    var inProgressProjects = allProjects.Where(p => p.Status == ProjectStatus.InProgress);
    var completedProjects = allProjects.Where(p => p.Status == ProjectStatus.Completed);
    var onHoldProjects = allProjects.Where(p => p.Status == ProjectStatus.OnHold);
    var cancelledProjects = allProjects.Where(p => p.Status == ProjectStatus.Cancelled);
    var totalProjectsCount = allProjects.Count();
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center gap-3 mb-2">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <div>
                    <h1 class="mb-0">@Model.DepartmentName</h1>
                </div>
            </div>
            <p>Viewing all projects assigned to this department</p>
        </div>
    </div>

    <!-- Department Info Card -->
    <div class="row g-4 mb-4 animate-in">
        <div class="col-lg-12">
            <div class="card" style="background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-medium) 100%); color: white;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="d-flex align-items-center justify-content-center" style="width: 64px; height: 64px; background: rgba(255, 255, 255, 0.2); border-radius: var(--radius-md); flex-shrink: 0;">
                                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="3" y="3" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                        <rect x="3" y="14" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                        <rect x="14" y="3" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                        <rect x="14" y="14" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="mb-1">@Model.DepartmentName</h3>
                                    <p class="mb-0 opacity-75">Department Code: @Model.DepartmentCode</p>
                                    <!-- Show Manager -->
                                    @if (Model.Manager != null)
                                    {
                                        <p class="mb-0 opacity-75 mt-1">
                                            Manager: <strong>@Model.Manager.FirstName @Model.Manager.LastName</strong> (@Model.Manager.Position)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-md-end">
                                <h2 class="mb-1">@totalProjectsCount</h2>
                                <p class="mb-0 opacity-75">Total Projects</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4 animate-in">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2v20M2 12h20" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: #6366f1;">@planningProjects.Count()</h3>
                            <p class="text-muted mb-0 small">Planning</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--warning) 0%, #fbbf24 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <polyline points="12 6 12 12 16 14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--warning);">@inProgressProjects.Count()</h3>
                            <p class="text-muted mb-0 small">In Progress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--success) 0%, #34d399 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <polyline points="22 4 12 14.01 9 11.01" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--success);">@completedProjects.Count()</h3>
                            <p class="text-muted mb-0 small">Completed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats Row -->
    <div class="row g-3 mb-4 animate-in">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, #f87171 0%, #ef4444 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <line x1="15" y1="9" x2="9" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <line x1="9" y1="9" x2="15" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: #ef4444;">@onHoldProjects.Count()</h3>
                            <p class="text-muted mb-0 small">On Hold</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--gray-400) 0%, var(--gray-500) 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <line x1="8" y1="12" x2="16" y2="12" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--gray-500);">@cancelledProjects.Count()</h3>
                            <p class="text-muted mb-0 small">Cancelled</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter - Server-side Form -->
    <div class="card mb-3 animate-in">
        <div class="card-body p-3">
            <form method="get" asp-action="DepartmentProjects" asp-route-id="@departmentId" id="searchForm">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: var(--gray-50); border: 1.5px solid var(--gray-300);">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Search by project code, name, or manager..."
                                   value="@searchTerm"
                                   id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()" title="Clear search">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div class="d-flex gap-2 flex-wrap">
                                <input type="hidden" name="status" id="statusFilter" value="@status">
                                <button type="button" class="btn btn-sm @(status == "all" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('all')">
                                    All Projects (@totalProjectsCount)
                                </button>
                                <button type="button" class="btn btn-sm @(status == "planning" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('planning')">
                                    Planning (@planningProjects.Count())
                                </button>
                                <button type="button" class="btn btn-sm @(status == "inprogress" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('inprogress')">
                                    In Progress (@inProgressProjects.Count())
                                </button>
                                <button type="button" class="btn btn-sm @(status == "completed" ? "btn-primary" : "btn-outline-secondary")"
                                        onclick="setStatusFilter('completed')">
                                    Completed (@completedProjects.Count())
                                </button>
                            </div>
                            <a asp-controller="Project" asp-action="Create" class="btn btn-sm btn-primary">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                                Add Project
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (pagedProjects.Items != null && pagedProjects.Items.Any())
    {
        <div class="table-container animate-in">
            <!-- Loading Indicator (hidden by default) -->
            <div id="loadingIndicator" style="display: none; text-align: center; padding: 20px;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading projects...</p>
            </div>

            <table class="table table-hover mb-0" id="projectTable">
                <thead>
                    <tr>
                        <th style="width: 12%;">Code</th>
                        <th style="width: 20%;">Project Name</th>
                        <th style="width: 18%;">Manager</th>
                        <th style="width: 10%;">Budget</th>
                        <th style="width: 12%;">Start Date</th>
                        <th style="width: 12%;">End Date</th>
                        <th style="width: 10%;">Status</th>
                        <th class="text-center" style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in pagedProjects.Items)
                    {
                        var statusBadgeStyle = project.Status switch
                        {
                            ProjectStatus.Planning => "background-color: #dbeafe; color: #1e40af;",
                            ProjectStatus.InProgress => "background-color: #fef3c7; color: #92400e;",
                            ProjectStatus.OnHold => "background-color: #fee2e2; color: #991b1b;",
                            ProjectStatus.Completed => "background-color: #dcfce7; color: #166534;",
                            ProjectStatus.Cancelled => "background-color: #f3f4f6; color: #4b5563;",
                            _ => "background-color: #f3f4f6; color: #4b5563;"
                        };

                        <tr>
                            <td style="width: 12%;">
                                <span class="table-code">@project.ProjectCode</span>
                            </td>
                            <td style="width: 20%;">
                                <strong style="color: var(--gray-900);">@project.ProjectName</strong>
                                @if (!string.IsNullOrEmpty(project.Description))
                                {
                                    <br>
                                    <small class="text-muted">@(project.Description.Length > 50 ? project.Description.Substring(0, 50) + "..." : project.Description)</small>
                                }
                            </td>
                            <td style="width: 18%;">
                                @if (project.ProjectManager != null)
                                {
                                    <div>
                                        <strong style="font-size: 0.875rem;">@project.ProjectManager.FirstName @project.ProjectManager.LastName</strong>
                                        <br>
                                        <small class="text-muted">@project.ProjectManager.Position</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Not Assigned</span>
                                }
                            </td>
                            <td style="width: 10%;">
                                <strong style="color: var(--accent-main);">$@project.Budget.ToString("N2")</strong>
                            </td>
                            <td style="width: 12%;">
                                <span class="text-muted">@project.StartDate.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td style="width: 12%;">
                                @if (project.EndDate.HasValue)
                                {
                                    <span class="text-muted">@project.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td style="width: 10%;">
                                <span class="badge" style="@statusBadgeStyle padding: 0.375rem 0.75rem; border-radius: 0.375rem; font-weight: 500; font-size: 0.8125rem;">
                                    @project.Status
                                </span>
                            </td>
                            <td class="text-center" style="width: 15%;">
                                <div class="d-inline-flex gap-2">
                                    <a asp-controller="Project" asp-action="ProjectEmployees" asp-route-id="@project.Id"
                                       class="btn btn-sm btn-outline-primary"
                                       title="View Team Members">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" />
                                            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                                        </svg>
                                        Team
                                    </a>
                                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id"
                                       class="btn btn-sm btn-outline-secondary" title="Edit Project">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Add Pagination -->
        @if (pagedProjects.TotalPages > 1)
        {
            var paginationInfo = new PaginationInfoViewModel
            {
                PageNumber = pagedProjects.PageNumber,
                PageSize = pagedProjects.PageSize,
                TotalCount = pagedProjects.TotalCount
            };

            <partial name="_PaginationPartial" model="@paginationInfo"
                     view-data="@(new ViewDataDictionary(ViewData) { { "ItemName", "projects" } })" />
        }
    }
    else
    {
        <div class="card animate-in">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <h5>No Projects Found</h5>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No projects found for "<strong>@searchTerm</strong>" in this department.</p>
                    <button onclick="clearSearch()" class="btn btn-outline-primary">
                        Clear Search
                    </button>
                }
                else if (status != "all")
                {
                    <p>No @(status) projects in this department.</p>
                    <button onclick="setStatusFilter('all')" class="btn btn-outline-primary">
                        Show All Projects
                    </button>
                }
                else
                {
                    <p>This department doesn't have any projects assigned yet. Add projects to get started.</p>
                    <a asp-controller="Project" asp-action="Create" class="btn btn-primary btn-primary-lg">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <span>Add First Project</span>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Set up enhanced UX for server-side search
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const tableContainer = document.querySelector('.table-container');

            // Show loading indicator on form submit
            if (form) {
                form.addEventListener('submit', function() {
                    if (loadingIndicator && tableContainer) {
                        // Fade out the table
                        tableContainer.style.opacity = '0.5';
                        tableContainer.style.transition = 'opacity 0.2s';

                        // Show loading indicator
                        loadingIndicator.style.display = 'block';

                        // Scroll to table position for better UX
                        const tableTop = tableContainer.offsetTop - 100;
                        window.scrollTo({
                            top: tableTop,
                            behavior: 'smooth'
                        });
                    }
                });
            }

            // Auto-submit on Enter in search (optional enhancement)
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        form.submit();
                    }
                });
            }

            // Focus on search input after page load
            if (searchInput && '@(!string.IsNullOrEmpty(searchTerm))' === 'False') {
                setTimeout(() => {
                    searchInput.focus();
                    if ('@searchTerm' !== '') {
                        searchInput.select();
                    }
                }, 100);
            }
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = 'all';
            updateFilterButtons('all');
            document.getElementById('searchForm').submit();
        }

        function setStatusFilter(status) {
            document.getElementById('statusFilter').value = status;
            updateFilterButtons(status);
            document.getElementById('searchForm').submit();
        }

        function updateFilterButtons(activeStatus) {
            // Update button styles
            const buttons = document.querySelectorAll('[onclick^="setStatusFilter"]');
            buttons.forEach(button => {
                const status = button.getAttribute('onclick').match(/'([^']+)'/)[1];
                if (status === activeStatus) {
                    button.className = button.className.replace('btn-outline-secondary', 'btn-primary');
                } else {
                    button.className = button.className.replace('btn-primary', 'btn-outline-secondary');
                }
            });
        }
    </script>
}