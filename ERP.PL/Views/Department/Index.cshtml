@model PagedResult<DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
    var searchTerm = ViewData["SearchTerm"] as string;
    var managerStatus = ViewData["ManagerStatus"] as string ?? "all";
}

<style>
    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

    .manager-avatar {
        width: 32px;
        height: 32px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid var(--primary-main);
        flex-shrink: 0;
    }

    .manager-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .manager-name {
        color: var(--gray-900);
        font-size: 0.875rem;
        font-weight: 600;
        line-height: 1.2;
    }

    .manager-position {
        color: var(--gray-600);
        font-size: 0.75rem;
        line-height: 1.2;
    }

    .no-manager-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.625rem;
        background-color: var(--gray-100);
        color: var(--gray-600);
        border-radius: 0.375rem;
        font-size: 0.8125rem;
    }
</style>

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                <div>
                    <h1>Departments</h1>
                    <p>Manage and organize your company's departmental structure and leadership</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    <span>Create Department</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        var totalDepartments = Model.TotalCount;
        var departmentsWithManagers = Model.Items.Count(d => d.Manager != null);
        var totalEmployees = Model.Items.Sum(d => d.Employees?.Count(e => !e.IsDeleted) ?? 0);
        var departmentsWithEmployees = Model.Items.Count(d => d.Employees != null && d.Employees.Any(e => !e.IsDeleted));
        var totalProjects = Model.Items.Sum(d => d.Projects?.Count(p => !p.IsDeleted) ?? 0);

        <div class="row g-3 mb-4 animate-in">
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--primary-main, #2563eb) 0%, var(--primary-light, #60a5fa) 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="3" y="3" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                    <rect x="3" y="14" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                    <rect x="14" y="3" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                    <rect x="14" y="14" width="7" height="7" rx="1" stroke="white" stroke-width="2" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--primary-main);">@totalDepartments</h3>
                                <p class="text-muted mb-0 small">Total Departments</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--success) 0%, #34d399 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="8.5" cy="7" r="4" stroke="white" stroke-width="2" />
                                    <polyline points="17 11 19 13 23 9" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--success);">@departmentsWithManagers</h3>
                                <p class="text-muted mb-0 small">With Managers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--accent-main) 0%, var(--accent-light) 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="9" cy="7" r="4" stroke="white" stroke-width="2" />
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@totalEmployees</h3>
                                <p class="text-muted mb-0 small">Total Employees</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--warning) 0%, #fbbf24 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold" style="color: var(--warning);">@totalProjects</h3>
                                <p class="text-muted mb-0 small">Total Projects</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Search Bar - Server-side Form -->
    <div class="card mb-3 animate-in">
        <div class="card-body p-3">
            <form method="get" asp-action="Index" id="searchForm">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: var(--gray-50); border: 1.5px solid var(--gray-300);">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Search by department code, name, or manager..."
                                   value="@searchTerm"
                                   id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()" title="Clear search">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex gap-2 flex-wrap justify-content-lg-end">
                            <input type="hidden" name="managerStatus" id="managerStatusFilter" value="@managerStatus">
                            <button type="button" class="btn btn-sm @(managerStatus == "all" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setManagerStatusFilter('all')">
                                All (@(Model?.TotalCount ?? 0))
                            </button>
                            <button type="button" class="btn btn-sm @(managerStatus == "withManager" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setManagerStatusFilter('withManager')">
                                With Manager (@(Model?.Items?.Count(d => d.Manager != null) ?? 0))
                            </button>
                            <button type="button" class="btn btn-sm @(managerStatus == "noManager" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setManagerStatusFilter('noManager')">
                                No Manager (@(Model?.Items?.Count(d => d.Manager == null) ?? 0))
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        <div class="table-container animate-in">
            <table class="table table-hover mb-0 table-fixed" id="departmentTable">
                <thead>
                    <tr>
                        <th style="width: 12%;">Code</th>
                        <th style="width: 18%;">Department Name</th>
                        <th style="width: 20%;">Manager</th>
                        <th class="text-center" style="width: 15%;">Employees</th>
                        <th class="text-center" style="width: 15%;">Projects</th>
                        <th style="width: 10%;">Created</th>
                        <th class="text-center" style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var department in Model.Items)
                    {
                        var employeeCount = department.Employees?.Count(e => !e.IsDeleted) ?? 0;
                        var activeCount = department.Employees?.Count(e => e.IsActive && !e.IsDeleted) ?? 0;
                        var projectCount = department.Projects?.Count(p => !p.IsDeleted) ?? 0;
                        var hasManager = department.Manager != null;

                        <tr>
                            <td style="width: 12%;">
                                <span class="table-code">@department.DepartmentCode</span>
                            </td>
                            <td style="width: 18%;">
                                <strong style="color: var(--gray-900);">@department.DepartmentName</strong>
                            </td>
                            <td style="width: 20%;">
                                @if (hasManager)
                                {
                                    <div class="manager-info">
                                        <img src="@department.Manager?.ImageUrl"
                                             alt="@department.Manager?.FirstName @department.Manager?.LastName"
                                             class="manager-avatar"
                                             onerror="this.src='https://via.placeholder.com/32?text=@(department.Manager?.FirstName?[0])@(department.Manager?.LastName?[0])'" />
                                        <div>
                                            <div class="manager-name">
                                                @department.Manager?.FirstName @department.Manager?.LastName
                                            </div>
                                            <div class="manager-position">
                                                @department.Manager?.Position
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="no-manager-badge">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                            <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        </svg>
                                        No Manager
                                    </span>
                                }
                            </td>
                            <td class="text-center" style="width: 15%;">
                                <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap" style="min-height: 32px;">
                                    @if (employeeCount > 0)
                                    {
                                        <a asp-action="DepartmentEmployees" asp-route-id="@department.Id"
                                           class="btn btn-sm btn-outline-primary" title="View @employeeCount employee(s)">
                                            @employeeCount Employees
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted" style="font-size: 0.875rem;">None</span>
                                    }
                                </div>
                            </td>
                            <td class="text-center" style="width: 15%;">
                                <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap" style="min-height: 32px;">
                                    @if (projectCount > 0)
                                    {
                                        <a asp-action="DepartmentProjects" asp-route-id="@department.Id"
                                           class="btn btn-sm btn-outline-info" title="View @projectCount project(s)">
                                            @projectCount Projects
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted" style="font-size: 0.875rem;">None</span>
                                    }
                                </div>
                            </td>
                            <td style="width: 10%;">
                                <span class="text-muted" style="font-size: 0.875rem;">@department.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td class="text-center" style="width: 20%;">
                                <div class="d-flex gap-2 justify-content-center align-items-center flex-wrap">
                                    @if (employeeCount > 0)
                                    {
                                        <a asp-action="DepartmentEmployees" asp-route-id="@department.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="View @employeeCount employee(s)">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                                                <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                            Employees
                                        </a>
                                    }
                                    @if (projectCount > 0)
                                    {
                                        <a asp-action="DepartmentProjects" asp-route-id="@department.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="View @projectCount project(s)">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect x="2" y="7" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                            Projects
                                        </a>
                                    }
                                    <a asp-action="Edit" asp-route-id="@department.Id"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Edit Department">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@department.Id"
                                       class="btn btn-sm btn-danger"
                                       title="Delete Department">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            var paginationInfo = new PaginationInfoViewModel
            {
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount
            };

            <partial name="_PaginationPartial" model="@Model.ToPaginationInfo()"
                     view-data="@(new ViewDataDictionary(ViewData) { { "ItemName", "departments" } })" />
        }
    }
    else
    {
        <div class="card animate-in">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                        <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                        <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                        <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                    </svg>
                </div>
                <h5>No Departments Found</h5>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No departments found for "<strong>@searchTerm</strong>".</p>
                    <button onclick="clearSearch()" class="btn btn-outline-primary">
                        Clear Search
                    </button>
                }
                else if (managerStatus != "all")
                {
                    <p>No departments with @(managerStatus == "withManager" ? "a manager" : "no manager").</p>
                    <button onclick="setManagerStatusFilter('all')" class="btn btn-outline-primary">
                        Show All Departments
                    </button>
                }
                else
                {
                    <p>Get started by creating your first department to establish your organizational structure.</p>
                    <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <span>Create First Department</span>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');

            // Auto-submit on Enter in search (optional enhancement)
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        form.submit();
                    }
                });
            }

            // Focus on search input after page load
            if (searchInput && '@(!string.IsNullOrEmpty(searchTerm))' === 'False') {
                setTimeout(() => {
                    searchInput.focus();
                    if ('@searchTerm' !== '') {
                        searchInput.select();
                    }
                }, 100);
            }
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('managerStatusFilter').value = 'all';
            updateFilterButtons('all');
            document.getElementById('searchForm').submit();
        }

        function setManagerStatusFilter(status) {
            document.getElementById('managerStatusFilter').value = status;
            updateFilterButtons(status);
            document.getElementById('searchForm').submit();
        }

        function updateFilterButtons(activeStatus) {
            // Update button styles
            const buttons = document.querySelectorAll('[onclick^="setManagerStatusFilter"]');
            buttons.forEach(button => {
                const status = button.getAttribute('onclick').match(/'([^']+)'/)[1];
                if (status === activeStatus) {
                    button.className = button.className.replace('btn-outline-secondary', 'btn-primary');
                } else {
                    button.className = button.className.replace('btn-primary', 'btn-outline-secondary');
                }
            });
        }
    </script>
}
