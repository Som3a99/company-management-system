@model DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid px-4">
    <div class="page-header delete-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center gap-3 mb-2">
                <div class="header-icon-container" style="width: 48px; height: 48px;">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <line x1="12" y1="9" x2="12" y2="13" stroke="white" stroke-width="2" stroke-linecap="round" />
                        <line x1="12" y1="17" x2="12.01" y2="17" stroke="white" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <h1 class="mb-0">Delete Department</h1>
                </div>
            </div>
            <p class="mb-0">This action cannot be undone. Please review the information carefully.</p>
        </div>
    </div>

    <div class="row animate-in">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="card" style="border: 2px solid var(--danger);">
                <div class="card-header-custom" style="background-color: rgba(var(--danger-rgb), 0.08); border-bottom: 1px solid var(--danger);">
                    <div class="d-flex align-items-center gap-2">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                            <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <span style="color: var(--danger); font-weight: 600;">Confirm Deletion</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="info-panel-danger d-flex align-items-start gap-3 mb-4">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="flex-shrink: 0; margin-top: 2px;">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            <line x1="12" y1="9" x2="12" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            <line x1="12" y1="17" x2="12.01" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <div>
                            <strong style="display: block; margin-bottom: 4px;">Warning: Permanent Action</strong>
                            <small>Deleting this department will permanently remove it from the system. This action cannot be reversed.</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3" style="color: var(--text-heading);">Department Details</h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Department Code</label>
                                <div class="detail-field p-3">
                                    <span class="table-code">@Model.DepartmentCode</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Department ID</label>
                                <div class="detail-field p-3">
                                    <strong style="color: var(--text-heading);">@Model.Id</strong>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label text-muted small">Department Name</label>
                            <div class="detail-field p-3">
                                <strong style="color: var(--text-heading); font-size: 1.125rem;">@Model.DepartmentName</strong>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label text-muted small">Created Date</label>
                            <div class="detail-field p-3">
                                <span style="color: var(--text-body);">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <div class="info-panel-warning d-flex align-items-start gap-3 mb-4">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="flex-shrink: 0; margin-top: 2px;">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                            <path d="M12 16v-4M12 8h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <div>
                            <strong style="display: block; margin-bottom: 4px;">Potential Impact</strong>
                            <ul class="mb-0 ps-3" style="font-size: 0.875rem;">
                                <li>All employees assigned to this department may be affected</li>
                                <li>Historical records referencing this department will lose context</li>
                                <li>Reports and analytics may show incomplete data</li>
                            </ul>
                        </div>
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-3 align-items-center">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <line x1="10" y1="11" x2="10" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    <line x1="14" y1="11" x2="14" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                                Yes, Delete This Department
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                No, Keep Department
                            </a>
                        </div>

                        <p class="text-muted small mt-3 mb-0">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -2px;">
                                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                <path d="M12 16v-4M12 8h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            </svg>
                            By clicking "Yes, Delete This Department", you acknowledge that this action is permanent and cannot be undone.
                        </p>
                    </form>
                </div>
            </div>

            <div class="card mt-4" style="border-color: var(--gray-200);">
                <div class="card-body p-4 text-center">
                    <h6 class="mb-3" style="color: var(--text-heading);">Need to make changes instead?</h6>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        Edit Department Instead
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>