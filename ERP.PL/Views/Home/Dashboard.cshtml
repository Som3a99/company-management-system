@model HomeDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="dash-header animate-in">
        <div class="d-flex flex-wrap align-items-end justify-content-between gap-3">
            <div>
                <h1 class="dash-title">Dashboard</h1>
                <p class="dash-subtitle">Workforce operations, organizational structure &amp; business intelligence</p>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4 animate-in" style="animation-delay: 0.04s">
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(var(--accent-main-rgb), 0.1); color: var(--accent);">
                    <i class="fas fa-sitemap"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.ActiveDepartments</div>
                    <div class="stat-label">Departments</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(var(--success-rgb), 0.1); color: var(--success);">
                    <i class="fas fa-users"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.TotalEmployees</div>
                    <div class="stat-label">Employees</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(var(--warning-rgb), 0.1); color: var(--warning);">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.ActiveProjects</div>
                    <div class="stat-label">Active Projects</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(var(--info-rgb), 0.1); color: var(--info);">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.SystemHealthPercentage<span style="font-size: 0.75em;">%</span></div>
                    <div class="stat-label">System Health</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Module Cards -->
    <div class="row g-3 animate-in" style="animation-delay: 0.08s">
        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Workforce & assignments">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-users" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">Maintain comprehensive employee records, track assignments, and manage workforce data across your organization.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Access Employees</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Structure & hierarchy">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-sitemap" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">Department Management</h5>
                    <p class="card-text">Define and organize your company's structure. Create departments, assign roles, and maintain the organizational hierarchy.</p>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Access Departments</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Project portfolio">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-folder-open" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">Project Management</h5>
                    <p class="card-text">Oversee project portfolios, manage budgets and timelines, track progress, and coordinate team assignments.</p>
                    <a asp-controller="Project" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Access Projects</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Operational productivity">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-tasks" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">Tasks Overview</h5>
                    <p class="card-text">Track and manage your assigned tasks, monitor progress, and collaborate with your team on active assignments.</p>
                    <div class="d-flex gap-3 mb-3" style="font-size: 0.875rem;">
                        <div>
                            <span style="color: var(--text-muted);">Visible:</span>
                            <strong style="color: var(--text-heading);">@Model.VisibleTasks</strong>
                        </div>
                        <div>
                            <span style="color: var(--text-muted);">In progress:</span>
                            <strong style="color: var(--accent);">@Model.MyOpenTasks</strong>
                        </div>
                    </div>
                    <a asp-controller="TaskBoard" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Open Task Board</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Security & access">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-shield-alt" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">User Account Management</h5>
                    <p class="card-text">Create and manage system user accounts, assign roles and permissions, and control access across the platform.</p>
                    <a asp-controller="UserManagement" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Access User Accounts</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card card-featured h-100" data-badge="Insights & analytics">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="fas fa-chart-line" style="font-size: 1.25rem;"></i>
                    </div>
                    <h5 class="card-title">Reports & Analytics</h5>
                    <p class="card-text">Generate comprehensive insights and reports for workforce planning, performance tracking, and data-driven decisions.</p>
                    <a asp-controller="Reporting" asp-action="Index" class="btn btn-primary btn-primary-lg w-100">
                        <span>Access Reports</span>
                        <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .dash-header {
            padding: 1.5rem 0 1rem;
        }
        .dash-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-heading);
            margin-bottom: 0.25rem;
        }
        .dash-subtitle {
            font-size: 0.9375rem;
            color: var(--text-muted);
            margin: 0;
        }
        .stat-card {
            display: flex;
            align-items: center;
            gap: 0.875rem;
            padding: 1rem 1.25rem;
            border-radius: var(--radius-lg);
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            transition: var(--transition-normal);
        }
        .stat-card:hover {
            border-color: var(--accent);
            box-shadow: var(--shadow-sm);
        }
        .stat-icon {
            width: 42px;
            height: 42px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            flex-shrink: 0;
        }
        .stat-value {
            font-size: 1.375rem;
            font-weight: 700;
            color: var(--text-heading);
            line-height: 1.2;
        }
        .stat-label {
            font-size: 0.8125rem;
            color: var(--text-muted);
            font-weight: 500;
        }
    </style>
}