@using ERP.PL.ViewModels.Employee
@{
    ViewData["Title"] = "Department Manager HR";
    var departmentEmployees = ViewBag.DepartmentEmployees as IReadOnlyList<EmployeeViewModel> ?? Array.Empty<EmployeeViewModel>();
    var unassignedEmployees = ViewBag.UnassignedEmployees as IReadOnlyList<EmployeeViewModel> ?? Array.Empty<EmployeeViewModel>();
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                <div>
                    <h1>Department Manager HR</h1>
                    <p>Assign unassigned employees to your department or remove employees from your department only.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Employees in Your Department</h5>
                    <span class="badge bg-primary">@departmentEmployees.Count</span>
                </div>
                <div class="card-body">
                    @if (departmentEmployees.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in departmentEmployees)
                                {
                                    <tr>
                                        <td>@employee.FirstName @employee.LastName</td>
                                        <td>@employee.Position</td>
                                        <td class="text-end">
                                            <form asp-action="Remove" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="employeeId" value="@employee.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Remove this employee from your department?');">
                                                    Remove
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No employees are currently assigned to your department.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Unassigned Employees</h5>
                    <span class="badge bg-success">@unassignedEmployees.Count</span>
                </div>
                <div class="card-body">
                    @if (unassignedEmployees.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in unassignedEmployees)
                                {
                                    <tr>
                                        <td>@employee.FirstName @employee.LastName</td>
                                        <td>@employee.Position</td>
                                        <td class="text-end">
                                            <form asp-action="Assign" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="employeeId" value="@employee.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-primary"
                                                        onclick="return confirm('Assign this employee to your department?');">
                                                    Assign
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No unassigned employees are available for assignment.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>