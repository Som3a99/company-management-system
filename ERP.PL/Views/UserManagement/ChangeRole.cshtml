@model ChangeRoleViewModel
@{
    ViewData["Title"] = "Change Roles — " + Model.Email;
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Change User Roles</h2>
            <p class="text-muted mb-0">Modify the roles assigned to <strong>@Model.Email</strong></p>
        </div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to Users</a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header fw-bold"><i class="fas fa-user me-2"></i>Account Information</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4">Employee</dt>
                        <dd class="col-sm-8">@(Model.EmployeeName ?? "—")</dd>
                        <dt class="col-sm-4">Current Roles</dt>
                        <dd class="col-sm-8">
                            @foreach (var role in Model.CurrentRoles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header fw-bold"><i class="fas fa-shield-alt me-2"></i>Assign Roles</div>
                <div class="card-body">
                    <form asp-action="ChangeRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedRoles" value="@role.Value"
                                           id="role_@role.Value"
                                           @(Model.SelectedRoles.Contains(role.Value) ? "checked" : "") />
                                    <label class="form-check-label" for="role_@role.Value">
                                        <strong>@role.Text</strong>
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary"
                                    onclick="return confirm('Are you sure you want to change the roles for this user?');">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark fw-bold"><i class="fas fa-info-circle me-2"></i>Role Hierarchy</div>
                <div class="card-body small">
                    <ul class="mb-0">
                        <li><strong>CEO</strong> — Full system access. Only assignable by another CEO.</li>
                        <li><strong>ITAdmin</strong> — User management, system configuration.</li>
                        <li><strong>DepartmentManager</strong> — Department-level oversight.</li>
                        <li><strong>ProjectManager</strong> — Project-level task and resource management.</li>
                        <li><strong>Employee</strong> — Base role for task execution.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
