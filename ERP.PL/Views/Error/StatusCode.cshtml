@{
    ViewData["Title"] = ViewBag.ErrorTitle;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorTitle
                </h4>
            </div>
            <div class="card-body text-center">
                <h1 class="display-1 text-danger">@ViewBag.StatusCode</h1>
                <p class="lead">@ViewBag.ErrorMessage</p>
                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>