@model PagedResult<EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Management";
    var searchTerm = ViewData["SearchTerm"] as string;
    var status = ViewData["Status"] as string ?? "all";

    // Calculate stats from ALL employees (not just current page)
    var activeEmployees = Model?.Items?.Where(e => e.IsActive && !e.IsDeleted) ?? Enumerable.Empty<EmployeeViewModel>();
    var inactiveEmployees = Model?.Items?.Where(e => !e.IsActive && !e.IsDeleted) ?? Enumerable.Empty<EmployeeViewModel>();
    var totalEmployees = Model?.TotalCount ?? 0;
    var activeCount = activeEmployees.Count();
    var inactiveCount = inactiveEmployees.Count();
}

<div class="container-fluid px-4">
    <div class="page-header animate-in">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-end flex-wrap gap-3">
                <div>
                    <h1>Employee Management</h1>
                    <p>Manage employee records, assignments, and workforce information</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    <span>Add New Employee</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4 animate-in">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--accent-main) 0%, var(--accent-light) 100%); border-radius: var(--radius-md); flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <circle cx="9" cy="7" r="4" stroke="white" stroke-width="2" />
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--accent-main);">@totalEmployees</h3>
                            <p class="text-muted mb-0 small">Total Employees</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon success" style="flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <polyline points="22 4 12 14.01 9 11.01" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--success);">@activeCount</h3>
                            <p class="text-muted mb-0 small">Active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon neutral">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" />
                                <line x1="15" y1="9" x2="9" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <line x1="9" y1="9" x2="15" y2="15" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--gray-500);">@inactiveCount</h3>
                            <p class="text-muted mb-0 small">Inactive</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon warning" style="flex-shrink: 0;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <line x1="16" y1="2" x2="16" y2="6" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <line x1="8" y1="2" x2="8" y2="6" stroke="white" stroke-width="2" stroke-linecap="round" />
                                <line x1="3" y1="10" x2="21" y2="10" stroke="white" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: var(--warning);">@(Model?.Items?.Count(e => e.HireDate.Year == DateTime.Now.Year) ?? 0)</h3>
                            <p class="text-muted mb-0 small">New This Year</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter - Server-side Form -->
    <div class="card mb-3 animate-in">
        <div class="card-body p-3">
            <form method="get" asp-action="Index" id="searchForm">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Search by name, email, position, or department..."
                                   value="@searchTerm"
                                   id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()" title="Clear search">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex gap-2 flex-wrap justify-content-lg-end">
                            <input type="hidden" name="status" id="statusFilter" value="@status">
                            <button type="button" class="btn btn-sm @(status == "all" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('all')">
                                All Employees (@totalEmployees)
                            </button>
                            <button type="button" class="btn btn-sm @(status == "active" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('active')">
                                Active Only (@activeCount)
                            </button>
                            <button type="button" class="btn btn-sm @(status == "inactive" ? "btn-primary" : "btn-outline-secondary")"
                                    onclick="setStatusFilter('inactive')">
                                Inactive Only (@inactiveCount)
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        <div class="table-container animate-in">
            <table class="table table-hover mb-0" id="employeeTable">
                <thead>
                    <tr>
                        <th style="width: 60px;">Photo</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Contact</th>
                        <th>Hire Date</th>
                        <th>Salary</th>
                        <th>Status</th>
                        <th class="text-center" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Items)
                    {
                        var imageUrl = !string.IsNullOrEmpty(employee.ImageUrl)
                        ? employee.ImageUrl
                        : "/uploads/images/avatar-user.png";

                        <tr>
                            <td>
                                <a asp-action="Profile" asp-route-id="@employee.Id">
                                    <img src="@imageUrl"
                                         alt="@employee.FirstName @employee.LastName"
                                         style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; border: 2px solid var(--gray-200); cursor: pointer;" />
                                </a>
                            </td>
                            <td>
                                <span class="table-code">@employee.Id</span>
                            </td>
                            <td>
                                <div>
                                    <a asp-action="Profile" asp-route-id="@employee.Id" class="clickable-link">
                                        <strong>@employee.FirstName @employee.LastName</strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">@employee.Email</small>
                                </div>
                            </td>
                            <td>
                                @if (employee.Department != null)
                                {
                                    <div>
                                        <span class="table-code" style="font-size: 0.75rem;">@employee.Department.DepartmentCode</span>
                                        <br>
                                        <small class="text-muted">@employee.Department.DepartmentName</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Not Assigned</span>
                                }
                            </td>
                            <td>
                                <span class="badge-custom">@employee.Position</span>
                            </td>
                            <td>
                                <small class="text-muted">@employee.PhoneNumber</small>
                            </td>
                            <td>
                                <span class="text-muted">@employee.HireDate.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td>
                                <strong style="color: var(--text-heading);">$@employee.Salary.ToString("N2")</strong>
                            </td>
                            <td>
                                @if (employee.IsActive)
                                {
                                    <span class="badge badge-status-active" style="padding: 0.375rem 0.75rem; border-radius: 0.375rem; font-weight: 500; font-size: 0.8125rem;">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -1px;">
                                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                            <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-status-inactive" style="padding: 0.375rem 0.75rem; border-radius: 0.375rem; font-weight: 500; font-size: 0.8125rem;">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: -1px;">
                                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                                            <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                            <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        </svg>
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-outline-secondary" title="Edit Employee">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger" title="Delete Employee">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            var paginationInfo = new PaginationInfoViewModel
            {
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount
            };

            <partial name="_PaginationPartial" model="@paginationInfo"
                     view-data="@(new ViewDataDictionary(ViewData) { { "ItemName", "employees" } })" />
        }
    }
    else
    {
        <div class="card animate-in">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" />
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <h5>No Employees Found</h5>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No employees found for "<strong>@searchTerm</strong>".</p>
                    <button onclick="clearSearch()" class="btn btn-outline-primary">
                        Clear Search
                    </button>
                }
                else if (status != "all")
                {
                    <p>No @(status) employees found.</p>
                    <button onclick="setStatusFilter('all')" class="btn btn-outline-primary">
                        Show All Employees
                    </button>
                }
                else
                {
                    <p>Get started by adding your first employee to begin building your workforce database.</p>
                    <a asp-action="Create" class="btn btn-primary btn-primary-lg">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <span>Add First Employee</span>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');

            // Auto-submit on Enter in search
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        form.submit();
                    }
                });
            }

            // Focus on search input after page load
            if (searchInput && '@(!string.IsNullOrEmpty(searchTerm))' === 'False') {
                setTimeout(() => {
                    searchInput.focus();
                    if ('@searchTerm' !== '') {
                        searchInput.select();
                    }
                }, 100);
            }
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = 'all';
            updateFilterButtons('all');
            document.getElementById('searchForm').submit();
        }

        function setStatusFilter(status) {
            document.getElementById('statusFilter').value = status;
            updateFilterButtons(status);
            document.getElementById('searchForm').submit();
        }

        function updateFilterButtons(activeStatus) {
            // Update button styles
            const buttons = document.querySelectorAll('[onclick^="setStatusFilter"]');
            buttons.forEach(button => {
                const status = button.getAttribute('onclick').match(/'([^']+)'/)[1];
                if (status === activeStatus) {
                    button.className = button.className.replace('btn-outline-secondary', 'btn-primary');
                } else {
                    button.className = button.className.replace('btn-primary', 'btn-outline-secondary');
                }
            });
        }
    </script>
}